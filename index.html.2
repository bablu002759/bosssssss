<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>🎉 Birthday Surprise</title>
  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background-color: #ffe4e1;
      text-align: center;
      padding: 40px;
    }

    input, button {
      padding: 10px 15px;
      font-size: 18px;
      margin: 10px;
      border-radius: 8px;
      border: none;
      outline: none;
    }

    #generateSection, #giftSection {
      display: none;
    }

    #giftBox {
      font-size: 100px;
      cursor: pointer;
      margin-top: 30px;
      animation: bounce 1s infinite;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-15px); }
    }

    #messages {
      display: none;
      margin-top: 40px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .msg {
      background: #fff;
      padding: 15px;
      border-radius: 10px;
      margin: 15px 0;
      font-size: 18px;
      box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
      opacity: 0;
      transform: translateY(20px);
      animation: slideIn 0.6s forwards;
    }

    @keyframes slideIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    #linkBox {
      margin-top: 20px;
    }

    a {
      color: #0000ee;
      word-break: break-word;
    }
  </style>
</head>
<body>
  <h2>🎁 Create Birthday Surprise 🎁</h2>

  <div id="inputSection">
    <p>Enter your friend's name:</p>
    <input type="text" id="nameInput" placeholder="Enter name..." />
    <button onclick="startSurprise()">Start</button>
  </div>

  <div id="giftSection">
    <h2 id="greeting">🎉 Happy Birthday! 🎉</h2>
    <div id="giftBox" onclick="showMessages()">🎁</div>
    <div id="messages"></div>
  </div>

  <audio id="bgMusic" preload="auto">
    <source src="https://cdn.pixabay.com/audio/2022/03/02/audio_33c292f6e4.mp3" type="audio/mpeg">
  </audio>

  <script>
    let wishes = [
      "Happy Birthday to my officially licensed jogra partner! 😜",
      "Tui chara amar kunu din complete lage na —",
      "Jogra kori, abar ek second e mishi jai.",
      "Ami chai tui amar loge always oula jogra kor, but valo o bashish! 😂",
      "May your day be full of cake, gifts, and no fight with me (at least today)! 💝"
    ];

    function startSurprise() {
      const name = document.getElementById("nameInput").value.trim();
      if (!name) return alert("Please enter a name!");

      document.getElementById("inputSection").style.display = "none";
      document.getElementById("giftSection").style.display = "block";
      document.getElementById("greeting").textContent = `🎉 Happy Birthday ${name}! 🎉`;
    }

    function showMessages() {
      document.getElementById("giftBox").style.display = "none";
      const msgContainer = document.getElementById("messages");
      msgContainer.style.display = "block";

      const music = document.getElementById("bgMusic");
      music.play().catch(() => {
        alert("Tap screen to allow music (browser blocked autoplay)");
      });

      wishes.forEach((msg, i) => {
        const div = document.createElement("div");
        div.className = "msg";
        div.style.animationDelay = `${i * 1}s`;
        div.textContent = msg;
        msgContainer.appendChild(div);
      });
    }
  </script>
</body>
</html>
